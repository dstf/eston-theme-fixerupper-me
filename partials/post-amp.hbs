{{!

    Renders:
      Post Author
      Post Title
      Post Media
      Post Excerpt
      Post Content
      Post Types
      Post More
      Post Tags
      Post Date

    Microdata:
      BlogPosting

}}

<article itemscope itemtype="http://schema.org/BlogPosting" class="post{{^if feature_image}}{{^has tag="_quote, _link, _chat, _audio, _video"}} post--text{{/has}}{{/if}}{{#if feature_image}}{{^has tag="_quote, _link, _chat, _audio, _video"}} post--photo post--cover{{/has}}{{/if}}{{^if feature_image}}{{^has tag="quote, _link, _chat, _video"}}{{#has tag="_audio"}} post--audio{{/has}}{{/has}}{{/if}}{{^if feature_image}}{{^has tag="quote, _link, _audio, _chat"}}{{#has tag="_video"}} post--video{{/has}}{{/has}}{{/if}}{{^if feature_image}}{{^has tag="_link, _chat, _audio, _video"}}{{#has tag="_quote"}} post--quote{{/has}}{{/has}}{{/if}}{{^if feature_image}}{{^has tag="_quote, _chat, _audio, _video"}}{{#has tag="_link"}} post--link{{/has}}{{/has}}{{/if}}{{^if feature_image}}{{^has tag="_link, _quote, _audio, _video"}}{{#has tag="_chat"}} post--chat{{/has}}{{/has}}{{/if}}{{^is "post, page"}} post--index{{/is}}{{#is "post"}} post--permalink{{/is}}{{#is "page"}} post--page{{/is}} main-item main-post" id="{{id}}">
  <div class="post-inner">

    <header class="post-item post-header">
      <div class="wrapper post-wrapper">

        {{! Author }}
        {{> "post/author-amp" }}

      </div>
    </header>

    {{! Media }}
    {{> "post/media-amp" }}

    <section class="post-item post-body">
      <div class="wrapper post-wrapper">

        {{! Title }}
        {{> "post/title" }}

        {{! Types }}
        {{> "post/types" }}

        {{amp_content}}

        {{! Tags }}
        {{> "post/tags" }}
      </div>
    </section>

    {{^is "page"}}
    <footer class="post-item post-footer" {{#if feature_image}}{{^has tag="_quote, _link, _chat, _audio, _video"}}{{#has tag="_overlay"}}data-ani="hide" data-js="hover-footer"{{/has}}{{/has}}{{/if}}>
      <div class="wrapper post-wrapper">

        <div class="meta post-meta">

          {{! Date }}
          {{> "post/date"}}

        </div>

      </div>
    </footer>
    {{/is}}

  </div>
</article>
